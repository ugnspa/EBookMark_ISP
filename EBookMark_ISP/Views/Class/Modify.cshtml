<!DOCTYPE html>
<html>
<head>
    <title>Modify Class</title>
    <style>
        #table {
            font-family: Arial;
            border-collapse: collapse;
            width: 100%;
        }

            #table td {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #table tr:hover {
                background-color: #ddd;
            }

            #table th {
                padding: 8px;
            }
    </style>
</head>
<body>
    <h1>Modify Class</h1>

    <!-- Form to modify class -->
    <form action=Modify method="post">
@*        <input type="hidden" name="classId" value="@Model.ClassId">
*@        
        <div class="form-group">
            <label for="className">Class Name:</label>
            <input type="text" id="className" name="className" class="form-control" value="1A" required>
        </div>
        <div class="form-group">
            <label for="studentCount">Student count:</label>
            <input type="number" id="studentCount" name="year" class="form-control" value="24" required>
        </div>
        <div class="form-group">
            <label for="year">Year:</label>
            <input type="number" id="year" name="year" class="form-control" value="2023" required>
        </div>
        
        <div class="form-group">
            <label for="code">Code:</label>
            <input type="number" id="code" name="code" class="form-control" value="1A2023" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Class</button>
    </form>

    <h3>Students</h3>

    <table id="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Student</td>
                <td>Student</td>
            </tr>
        </tbody>
    </table>

    <h3>Add Students to Class</h3>
    <!-- Table of students and button to add new students -->
    <table id="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Student2</td>
                <td>Student2</td>
                <td>
                    <a href="@Url.Action("AddStudentToClass", "Class", new { id="Student2" })" class="btn btn-success">Add to Class</a>
                </td>
            </tr>


            @*@foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.Name</td>
                    <td>
                        <a href="@Url.Action("AddStudentToClass", "YourController", new { classId = Model.ClassId, studentId = student.StudentId })" class="btn btn-success">Add to Class</a>
                    </td>
                </tr>
            }*@
        </tbody>
    </table>
</body>
</html>
