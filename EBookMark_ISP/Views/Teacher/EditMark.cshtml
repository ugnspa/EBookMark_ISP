@using EBookMark_ISP.ViewModels
@model EditMarkViewModel
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3>Edit Mark for @Model.Name @Model.Subject Day - @Model.Day</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditMark" method="post" class="form-horizontal">
                        <input type="hidden" asp-for="Name" />
                        <input type="hidden" asp-for="Subject" />
                        <input type="hidden" asp-for="Day" />

                        <div class="form-group">
                            <label asp-for="Mark" class="control-label">Mark:</label>
                            <input asp-for="Mark" class="form-control" />
                            <span asp-validation-for="Mark" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4 mb-3">
    <a class="btn btn-primary btn-lg" asp-controller="User" asp-action="GradeBook" asp-route-name="@Model.Name">Back to GradeBook</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
